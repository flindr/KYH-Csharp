@model RoomBookingV1.Models.ViewModels.EditBookingViewModel

<h1>Edit booking</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input hidden asp-for="Booking.Id" />
            <div class="form-group">
                <label class="control-label">Booker</label>
                <input class="form-control" asp-for="Booking.Booker" />
            </div>
            <div class="form-group">
                <label class="control-label">Room</label>
                <select class="form-control" asp-for="Booking.RoomId"
                        asp-items="@(new SelectList(Model.Rooms, "Id", "Name"))">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">From</label>
                <input class="form-control" asp-for="Booking.From" />
            </div>
            <div class="form-group">
                <label class="control-label">To</label>
                <input class="form-control" asp-for="Booking.To" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
