@model Booking

<h1>Delete</h1>

<h3>Are you sure you want to delete this booking?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteConfirmed" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label class="control-label">Booker</label>
                <input disabled class="form-control" asp-for="Booker" />
            </div>
            <div class="form-group">
                <label class="control-label">Room name</label>
                <input disabled class="form-control" asp-for="RoomName" />
            </div>
            <div class="form-group">
                <label class="control-label">From</label>
                <input disabled class="form-control" asp-for="From" />
            </div>
            <div class="form-group">
                <label class="control-label">To</label>
                <input disabled class="form-control" asp-for="To" />
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Delete" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
